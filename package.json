{
  "name": "mkdocs-vscode",
  "displayName": "MkDocs Preview",
  "description": "A focused VS Code extension that spins up a live MkDocs preview for intergrated doc browsing.",
  "version": "0.0.1",
  "publisher": "aswinunni01",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Visualization",
    "Education"
  ],
  "main": "out/extension.js",
  "activationEvents": [
    "workspaceContains:**/mkdocs.yml"
  ],
  "contributes": {
    "configuration": {
      "title": "MkDocs Preview",
      "properties": {
        "mkdocs-vscode.port": {
          "type": "number",
          "default": 8000,
          "description": "The port number to run the MkDocs server on."
        }
      }
    },
    "commands": [
      {
        "command": "mkdocs-vscode.startPreview",
        "title": "MkDocs: Start Preview",
        "category": "MkDocs",
        "icon": "$(open-preview)"
      },
      {
        "command": "mkdocs-vscode.stopPreview",
        "title": "MkDocs: Stop Preview",
        "category": "MkDocs"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "mkdocs-vscode.startPreview",
          "group": "navigation",
          "when": "resourceFilename == mkdocs.yml"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mkdocs-vscode",
          "title": "Mkdocs Preview",
          "icon": "$(open-preview)"
        }
      ]
    },
    "views": {
      "mkdocs-vscode": [
        {
          "id": "mkdocs-vscode-view",
          "name": "MkDocs Preview",
          "type": "webview",
          "icon": "$(debug-stop)"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "compile": "tsc -p ./"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^25.2.3",
    "@types/vscode": "^1.109.0",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "eslint": "^9.0.0",
    "typescript": "^5.9.3"
  }
}